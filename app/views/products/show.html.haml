.btn-group
  = link_to 'Back', category_products_path, class: 'btn btn-primary'
  - if user_is_admin?
    = link_to 'Edit', edit_category_product_path(category.id, product.id), class: 'btn btn-default'

%p
  %b Category:
  = product.category.name

%p
  %b Title:
  = product.title
%p
  %b Description:
  = product.description
%p
  %b Price:
  = product.price


%h3 Reviews
%p
  Average rate:
  %b
    = product.average_rating
.list-group
  = render reviews
- if user_signed_in?
  = render 'reviews/form'



