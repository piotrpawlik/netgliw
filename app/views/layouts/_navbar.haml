%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %span.navbar-brand 
        = link_to "#{AppConfig.workshops_name}", root_url
    %p.navbar-text.navbar-right
      - unless user_signed_in?
        = link_to "Log in", new_user_session_path, class: 'btn btn-default'
      - else
        Logged in as 
        %b 
          = current_user.email
        = link_to "Profile", current_user, class: 'btn btn-default'
        = link_to "Log out", destroy_user_session_path, method: 'delete', class: 'btn btn-default'
